{
    "name": "Plop Image Downloader",
    "description": "Download every image on a webpage",
    "version": "0.1",
    "permissions": ["<all_urls>", "tabs", "activeTab", "downloads"],
    "icons": {
        "16":"16.png",
        "48":"48.png",
        "64":"64.png",
        "128":"128.png"
    },
    "browser_action": {
        "default_popup": "popup/index.html"
    },
    "background": {
        "scripts": ["jquery-3.5.1.min.js", "background.js"]

    },
    "content_scripts": [{
        /* "matches": ["*://www.google.com/*"],
         "js": ["content.js"]*/
        "matches": ["<all_urls>"],
        "js": ["jquery-3.5.1.min.js", "content.js"]
    }],

    "manifest_version": 2

}